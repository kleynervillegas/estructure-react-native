{
  "expo": {
    "name": "react-native-app",
    "slug": "react-naive-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "reactnativeapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kvillegas.reactnaiveapp",
      "appleTeamId": "GHBG87YZDK",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Permite a $(PRODUCT_NAME) acceder a tu galería de fotos para seleccionar imágenes",
        "NSCameraUsageDescription": "Permite a $(PRODUCT_NAME) acceder a tu cámara para tomar fotos",
        "NSMicrophoneUsageDescription": "Permite a $(PRODUCT_NAME) acceder a tu micrófono para grabar videos con audio",
        "NSDocumentPickerUsageDescription": "Esta app necesita acceder a documentos para que puedas subir archivos"
      },
      "UIBackgroundModes": ["audio", "fetch"]
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.reactnaiveapp.v1",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "blockedPermissions": []
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fa00b85c-33e2-496b-a6be-82fd837ff435"
      }
    },
    "owner": "kvillegas"
  }
}